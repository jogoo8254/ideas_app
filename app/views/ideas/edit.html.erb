<h1>Edit Ideas</h1>

<%= form_with(model: @idea, local: true) do |form| %>
    <% if @idea.errors.present? %>
        <p class="form-errors">
            <%= @idea.errors.full_messages.join(", ") %>
        </P>
    <% end %>
    <div>
        <%= form.label :title %>
        <%= form.text_field :title%>
    </div>
    <div>
        <%= form.label :body %>
        <%= form.text_area :body%>
    </div>
    <%= form.submit %>
<% end %>
